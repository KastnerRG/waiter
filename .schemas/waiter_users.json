{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "users": {
      "type": "array",
      "items": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "authorized_keys": {
              "type": "array",
              "items": {
                  "type": "string",
                  "pattern": "ssh-(ed25519|rsa|dss|ecdsa) [0-9A-Za-z+/=.]*"
                }
            },
            "expires": {
              "type": "string",
              "pattern": "20[0-9]{2}-[01][0-9]-[0-3][0-9] 23:59:59"
            },
            "groups": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "docker",
                  "cuda",
                  "rdp_users"
                ]
              }
            },
            "password": {
              "type": "string",
              "pattern": "\\$6\\$[$A-Za-z0-9+/=.]*\\$[A-Za-z0-9+/=.]{86}"
            },
            "sudo_allow": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "sudo_deny": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "username",
            "name",
            "authorized_keys",
            "expires",
            "password"
          ]
        }
    }
  },
  "required": [
    "users"
  ]
}